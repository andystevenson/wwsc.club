{% if group.people %}
  <section class="people">
    <h2>{{group.people.title}}</h2>
    {% if group.people.members %}
      <section class="members">
        {% for member in group.people.members %}
          <section class="member">
            <picture>
              <img src="{{ member.image }}" alt="{{member.name}}" width="64" height="64" loading='lazy'>
            </picture>
            {% if member.role %}
              {% if member.link %}
                <a href={{member.link}}>
                  <h3>{{member.role}}</h3>
                </a>
              {% else %}
                <h3>{{member.role}}</h3>
              {% endif %}
            {% endif %}
            {% if member.name %}
              <p>{{member.name}}</p>
            {% endif %}

          </section>
        {% endfor %}
      </section>
    {% endif %}
    <section class="contacts">
      <a href="mailto:{{group.people.email}}?Subject=Feedback" 
          title="{{group.people.emailMessage}}">
        <img src="/images/envelope.svg" alt="{{group.people.emailMessage}}" loading='lazy'>
      </a>
    </section>
  </section>
{% endif %}