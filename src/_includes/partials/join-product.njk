{% if product %}
  <article class="join-product">
    <header>
      <h2>{{product.name}}</h2>
      <p>{{product.description}}</p>
      {% if product.conditions %}
        <p class="conditions">({{product.conditions}})</p>
      {% endif %}
    </header>
    {% set prices = product.prices %}
    {% include "partials/join-product-prices.njk" %}
  </article>
{% endif %}