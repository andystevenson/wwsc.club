{% if categories %}
  <section class="join-categories">
    {% for category in categories %}
      <button id="join-{{category.name}}" title="{{category.name}} price options">
        <svg viewBox="0 0 24 24">
          <use href="#checkmark-icon"/>
        </svg>
        <span>{{category.name}}</span>
      </button>
    {% endfor %}
  </section>
{% endif %}