{% if teaAndCoffee %}
  <section class="tea-and-coffee" id="tea-and-coffee-menu-section">
    <header>
      <h2>Tea & Coffee</h2>
      <small>(WWSC members enjoy 15% discount!)</small>
      {{ imgc(cms.image.coffee)}}
    </header>
    <ul>
      {% for tAc in teaAndCoffee.children %}
        <li>
          <article>
            <p class="name">
              {{tAc.product_name}}
            </p>
            <p class="price">
              {{tAc.selling_price}}
            </p>
          </article>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endif %}