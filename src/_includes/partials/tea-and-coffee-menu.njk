{% if info['tea-coffee'] %}
  <section class="tea-and-coffee" id="tea-and-coffee-menu-section">
    <header>
      <h2>Tea & Coffee</h2>
      <small>(WWSC members enjoy 15% discount!)</small>
      {{ imgc(cms.image.coffee)}}
    </header>
    <ul>
      {% for tAc in info['tea-coffee'] %}
        {% if tAc.active %}          
        <li>
          <article>
            <p class="name">
              {{tAc.name}}
            </p>
            <p class="price">
              {{tAc.price}}
            </p>
          </article>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
  </section>
{% endif %}