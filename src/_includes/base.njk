---js
{
  title: 'West Warwicks',
  site: 'https://westwarwicks.club',
  company: 'West Warwickshire Sports Complex',
  description: 'West Warwickshire Sports Complex - the heart of sport & hospitality in Solihull.'
}
---
{% import "utilities/macro.njk" as util %}

<!DOCTYPE html>
<html lang="en">

  <head>
    <title>{{ title if title else meta.title }}</title>

    {# deliberately early non-deferred use of theme toggle to render the color-scheme correctly while loading #}

    <script type="module" src="/@input/js/theme-toggle.js"></script>

    <meta charset="UTF-8"/>
    {% if build.production %}
      <base href="{{ site if site else meta.site }}/" target="_blank">
    {% endif %}

    <meta name="description" content="{{ description if description else meta.description }}">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google / Search Engine Tags -->
    <meta itemprop="name" content="{{ meta.company }}">
    <meta itemprop="description" content="{{ description if description else meta.description }}">
    <meta itemprop="image" content="{{ site if site else meta.site }}/social-image.png">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="{{ site if site else meta.site }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ company if company else meta.company }}">
    <meta property="og:description"
    content="description if description else meta.description ">
    <meta property="og:image" content="{{ site if site else meta.site }}/social-image.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ company if company else meta.company }}">
    <meta name="twitter:description"
    content="{{ description if description else meta.description }}">
    <meta name="twitter:image" content="{{ site if site else meta.site }}/social-image.png">

    <!-- favicon  -->
    <!-- https://evilmartians.com/chronicles/how-to-favicon-in-2021-six-files-that-fit-most-needs -->
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <!-- 32×32 -->
    <link rel="apple-touch-icon" type="image/png" href="/favicon-180.png">
    <!-- 180×180 -->

    <!-- manifest -->
    <link rel="manifest" href="/manifest.webmanifest">

    <link rel="stylesheet" href="/@input/sass/styles.scss">

    {% if script %}
      <script src="/@input/js/{{script}}" defer></script>
    {% endif %}
  </head>

  <body class="{{page.fileSlug}}">
    <svg style="display:none">
      <symbol id="download-icon">
        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
      </symbol>
      <symbol id="play-icon">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
      </symbol>
      <symbol id="pause-icon">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </symbol>
      <symbol id="checkmark-icon">
        <polyline points="9 11 12 14 22 4"/>
        <path style="opacity:.75;" d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
      </symbol>
      <symbol id="bent-arrow">
        <path d="m15 10 5 5-5 5"/>
        <path d="M4 4v7a4 4 0 0 0 4 4h12"/>
      </symbol>
    </svg>
    <a href="#main" class="skip-to-content">Skip to content</a>
    <a href="#" class="scroll-to-top">
      <img src="/chevron-up.svg" alt="scroll to top" title="to top of page">
    </a>
    <div class="site container">
      <header>
        {% include 'partials/header.njk' %}
      </header>

      <main id='main'>
        {{ content | safe }}
      </main>

      <footer>
        {% include 'partials/footer.njk' %}
      </footer>

    </div>

  </body>

</html>