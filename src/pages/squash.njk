{% set group = squash %}

<h1>{{ title | capitalize }}</h1>
{{imgc(cms.image["squash-banner"])}}

<p class="description">{{ squash.description }}</p>

<section title="squash is fun" class="media-scroller squash-is-fun">
  {% for image in squash.englandSquashMedia %}
    {{ imgc(cms.image[image]) }}
  {% endfor %}
</section>

<p class="description">{{ squash.newToSquash }}</p>
{{ button('book a court') | form(class='book-a-court', action=bookNow)}}

<section title='rob owen academy' class="roa" id="roa">
  {{imgc(cms.image["squash-roa-welcome"])}}

  <section class="roa-coaches">
    <h2>Coaches</h2>
      
    <section class="media-scroller roa-team">
      {% for member in squash.team %}
        <article>
          <picture>{{imgc(cms.image[member.image])}}</picture>
          <h3>{{member.name}}</h3>
          <p>{{member.role}}</p>
          <details>
            <summary>
              Bio
            </summary>
            <p>{{member.bio}}</p>
          </details>
        </article>
      {% endfor %}
    </section>
  </section>

  <section class="roa-junior-programmes">
    <h2>Junior Programmes</h2>
    <section title="roa images" class="media-scroller roa-images">
      {% for image in squash.roaImages %}
        <picture>{{ imgc(cms.image[image]) }}</picture>
      {% endfor %}
    </section>

    <section title="junior programmes" class="media-scroller roa-programmes">
      {% for programme in squash.juniorProgrammes %}
        <article class='roa-junior-programme' id='{{programme.name}}'>
          <picture>{{ imgc(cms.image[programme.name]) }}</picture>
          <button>Book Now</button>
          <details>
            <summary>Description</summary>
            <p class="description">{{programme.description}}</p>
          </details>
          <form></form>
        </article>
      {% endfor %}
    </section>

  </section>

  <section class="roa-adult-programmes">
    <h2>Adult Programmes</h2>
    <section title="roa images" class="media-scroller roa-images">
      {% for image in squash.roaImages %}
        <picture>{{ imgc(cms.image[image]) }}</picture>
      {% endfor %}
    </section>

    <section title="adult programmes" class="media-scroller roa-programmes">
      {% for programme in squash.adultProgrammes %}
        <article class='roa-adult-programme' id='{{programme.name}}'>
          <picture>{{ imgc(cms.image[programme.name]) }}</picture>
          <button>Book Now</button>
          <details>
            <summary>Description</summary>
            <p>{{programme.description}}</p>
          </details>
          <form></form>
        </article>
      {% endfor %}
    </section>
  </section>

  <section class="roa-alumni">
    <h2>Professionals & Alumni</h2>

    <section class="media-scroller roa-team">
      {% for member in squash.alumni %}
        <article>
          <picture>{{imgc(cms.image[member.image])}}</picture>
          <h3>{{member.name}}</h3>
          <details>
            <summary>
              Bio
            </summary>
            <p>{{member.bio}}</p>
          </details>
        </article>
      {% endfor %}
    </section>
    <p class="description">{{squash.seeTheProfessionals}}</p>
  </section>

  <section class="roa-jonah">
    <h2>Where it all started for West Warwicks...</h2>
    {{imgc(cms.image["squash-jonah-barrington-legend"])}}
    <section class="roa-history">
      {{imgc(cms.image["squash-jonah-barrington-1"])}}
      <div>
        <p class="description">{{squash.history | first}}</p>
        <details>
          <summary>... more</summary>
          {% for paragraph in squash.history | slice(1) %}
            <p class="description">{{paragraph}}</p>
        {% endfor %}
        </details>
      </div>
      {{imgc(cms.image["squash-jonah-barrington-2"])}}
    </section>
    <section class="roa-courts">
      {{imgc(cms.image["squash-jonah-barrington-court"])}}
      {{imgc(cms.image["squash-rob-owen-court"])}}
    </section>    
  </section>

  {{imgc(cms.image["squash-roa-tin"])}}
</section>

<section class="group teams">
  <h2>WWSC Teams</h2>
  <section class="activities">
    <section class="team">
      <a href="{{squash.warwickshireLeague}}" target="_blank">
        <picture>
          {{ imgc(cms.image['warwickshire-squash']) }}
        </picture>
      </a>
      <h2>Warwickshire<br>League</h2>
    </section>
    <section class="team">
      <a href="{{squash.wwsc1stTeam}}" target="_blank">
        <picture>
          {{ imgc(cms.image['squash-1st-team']) }}
        </picture>
      </a>
    </section>
    <section class="team">
      <a href="{{squash.wwsc2ndTeam}}" target="_blank">
        <picture>
          {{ imgc(cms.image['squash-2nd-team']) }}
        </picture>
      </a>

    </section>
  </section>
</section>

